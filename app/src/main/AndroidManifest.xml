<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="freifunk.bremen.de.mobilemeshviewer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MeshViewerActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MeshViewerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="freifunk.bremen.de.mobilemeshviewer.MeshViewerActivity" />
        </activity>
        <activity
            android:name=".node.NodeActivity"
            android:label="@string/title_activity_node"
            android:parentActivityName=".MeshViewerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="freifunk.bremen.de.mobilemeshviewer.MeshViewerActivity" />
        </activity>

        <service
            android:name=".node.NodeCheckerService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".NotificationService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".node.NodeAlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".node.MyNodesActivity"
            android:label="@string/title_activity_my_nodes"
            android:parentActivityName=".MeshViewerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="freifunk.bremen.de.mobilemeshviewer.MeshViewerActivity" />
        </activity>
    </application>

</manifest>
